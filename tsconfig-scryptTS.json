{
  "extends": "./tsconfig.json",
  "include": ["src/contracts/**/*.ts"],
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2020",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}